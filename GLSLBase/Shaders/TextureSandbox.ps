#version 450

out vec4 FragColor;

in vec2 v_TexCoord;

uniform sampler2D u_TexSampler;

vec4 Flip()
{
	vec4 returnValue = vec4(0);
	vec2 newTexCoord = vec2(0);
	newTexCoord.x = v_TexCoord.x;
	newTexCoord.y = 1 - v_TexCoord.y;
	returnValue = texture(u_TexSampler, newTexCoord);
	return returnValue;
}

void main()
{
	FragColor = Flip();
}
